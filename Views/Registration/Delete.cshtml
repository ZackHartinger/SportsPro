@{
	ViewData["Title"] = "Registrations";
}
@model RegistrationsViewModel

<h2>Confrirm Deletion</h2>
<h3>@Model.Product.Name from (@Model.Customer.FullName)'s list of registered products?</h3>

<form asp-action="Delete" method="post">
	<input type="hidden" asp-for="ProductId" />

	<button type="submit" class="btn btn-primary">Delete</button>
	<a asp-controller="Home" asp-action="Products"
	   class="btn btn-primary">Cancel</a>

</form>