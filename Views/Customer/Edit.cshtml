@{
	string title = ViewBag.Action + " Customer";
	ViewData["Title"] = title;
}
@model Customer

<style>
	.input-validation-error {
		border: 2px solid #dc3545;
		background-color: #faebd7;
	}
</style>

<partial name="_ValidationScriptsPartial" />
<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
	<div class="row mb-2">
		<div class="col-md-2">
			<label asp-for="FirstName" class="form-label">First Name</label>
		</div>
		<div class="col-md-6">
			<input asp-for="FirstName" class="form-control" />
		</div>
		<div class="col-md-4">
			<span asp-validation-for="FirstName" class="text-danger"></span>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-md-2">
			<label asp-for="LastName" class="form-label">Last Name</label>
		</div>
		<div class="col-md-6">
			<input asp-for="LastName" class="form-control" />
		</div>
		<div class="col-md-4">
			<span asp-validation-for="LastName" class="text-danger"></span>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-md-2">
			<label asp-for="Address" class="form-label">Address</label>
		</div>
		<div class="col-md-6">
			<input asp-for="Address" class="form-control" />
		</div>
		<div class="col-md-4">
			<span asp-validation-for="Address" class="text-danger"></span>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-md-2">
			<label asp-for="City" class="form-label">City</label>

		</div>
		<div class="col-md-6">
			<input asp-for="City" class="form-control" />
		</div>
		<div class="col-md-4">
			<span asp-validation-for="City" class="text-danger"></span>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-md-2">
			<label asp-for="State" class="form-label">State</label>
		</div>
		<div class="col-md-6">
			<input asp-for="State" class="form-control" />
		</div>
		<div class="col-md-4">
			<span asp-validation-for="State" class="text-danger"></span>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-md-2">
			<label asp-for="PostalCode" class="form-label">Postal Code</label>
		</div>
		<div class="col-md-6">
			<input asp-for="PostalCode" class="form-control" />
		</div>
		<div class="col-md-4">
			<span asp-validation-for="PostalCode" class="text-danger"></span>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-md-2">
			<label asp-for="Country" class="form-label">Country</label>
		</div>
		<div class="col-md-6">
			<select asp-for="Country" class="form-select">
				<option value="">Select a country</option>
				<option value="United States">United States</option>
				<option value="Mexico">Mexico</option>
				<option value="Canada">Canada</option>
			</select>
		</div>
		<div class="col-md-4">
			<span asp-validation-for="Country" class="text-danger"></span>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-md-2">
			<label asp-for="Email" class="form-label">Email</label>
		</div>
		<div class="col-md-6">
			<input asp-for="Email" class="form-control" />
		</div>
		<div class="col-md-4">
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
	</div>
	<div class="row mb-2">
		<div class="col-md-2">
			<label asp-for="PhoneNumber" class="form-label">Phone Number</label>
		</div>
		<div class="col-md-6">
			<input asp-for="PhoneNumber" class="form-control" />
		</div>
		<div class="col-md-4">
			<span asp-validation-for="PhoneNumber" class="text-danger"></span>
		</div>
	</div>

	<input type="hidden" asp-for="CustomerId"/>

	<button type="submit" class="btn btn-primary">Save</button>
	<a asp-controller="customer" asp-action="Customers"
		class="btn btn-primary">Cancel</a>

</form>
