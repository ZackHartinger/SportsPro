@{
	string title = Model.Action + " Incident";
	ViewData["Title"] = title;
}
@model EditIncidentViewModel

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="mb-3">
		<label asp-for="@Model.Incident.CustomerId" class="form-label">Customer</label>
		@* <select asp-for="@Model.Incident.CustomerId" class="form-select form-control" asp-items="@(new SelectList(Model.Customers, "CustomerId", "FirstName"))">
			<option value="">Please select a customer</option>
		</select> *@
		<customer-dropdown asp-for="@Model.Incident.CustomerId" asp-for-string="Incident.CustomerId"></customer-dropdown>
	</div>

	<div class="mb-3">
		<label asp-for="@Model.Incident.ProductId" class="form-label">Product</label>
		@* <select asp-for="@Model.Incident.ProductId" class="form-select form-control" asp-items="@(new SelectList(Model.Products, "ProductId", "Name"))">
			<option value="">Please select a product</option>
		</select> *@
		<product-dropdown asp-for="@Model.Incident.ProductId" asp-for-string="Incident.ProductId"></product-dropdown>
	</div>


	<div class="mb-3">
		<label asp-for="@Model.Incident.Title" class="form-label">Title</label>
		<input asp-for="@Model.Incident.Title" class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="@Model.Incident.Description" class="form-label">Description</label>
		<input asp-for="@Model.Incident.Description" class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="@Model.Incident.TechnicianId" class="form-label">Technician</label>
		@* <select asp-for="@Model.Incident.TechnicianId" class="form-select form-control" asp-items="@(new SelectList(Model.Technicians, "TechnicianId", "Name"))">
			<option value="">Please assign a technician</option>
		</select> *@
		<technician-dropdown asp-for="@Model.Incident.TechnicianId" asp-for-string="Incident.TechnicianId"></technician-dropdown>
	</div>


	<div class="mb-3">
		<label asp-for="@Model.Incident.OpenDate" class="form-label">DateOpened</label>
		<input asp-for="@Model.Incident.OpenDate" class="form-control" />
	</div>

	<div class="mb-3">
		<label asp-for="@Model.Incident.CloseDate" class="form-label">Date Closed</label>
		<input asp-for="@Model.Incident.CloseDate" class="form-control" />
	</div>

	<input type="hidden" asp-for="@Model.Incident.IncidentId" />

	<button type="submit" class="btn btn-primary">Save</button>
	<a asp-controller="incident" asp-action="Incidents"
	   class="btn btn-primary">Cancel</a>
</form>