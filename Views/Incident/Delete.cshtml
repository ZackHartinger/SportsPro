@model Incident
@{
	ViewData["Title"] = "Delete Incident";
}

<h2>Confrirm Deletion</h2>
<h3>@Model.Title - @Model.Description</h3>

<form asp-controller="incident" asp-action="Delete" method="post">
	<input type="hidden" asp-for="IncidentId" />

	<button type="submit" class="btn btn-primary">Delete</button>
	<a asp-controller="incident" asp-action="Incidents"
	   class="btn btn-primary">Cancel</a>

</form>



